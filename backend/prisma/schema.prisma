generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id               Int                @id @default(autoincrement())
  name             String             @unique
  desc             String
  category_details Category_details[]
  Item             Item[]
}

model Category_details {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  desc       String
  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])
}

model Item {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  desc       String
  item_img   String
  amount     Int
  price      Float
  cost_price Float
  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])
}
